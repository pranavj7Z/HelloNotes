<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="4dp"
    android:id="@+id/id"
    android:layout_marginLeft="7dp"
    android:layout_marginRight="7dp"
    android:clickable="true"
    android:foreground="?android:attr/selectableItemBackground"
    android:layout_marginBottom="4dp"
    app:cardCornerRadius="4dp">

    <ImageButton
        android:id="@+id/note_menu"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@drawable/ic_more_vert_black_24dp"
        android:contentDescription="@string/notes_menu"
        app:layout_column="2"
        android:padding="8dp"
        app:layout_row="0"
        android:layout_gravity="right|top" />

    <View
        android:layout_width="match_parent"
        android:layout_height="30dp"
        app:layout_column="0"
        app:layout_row="0"
        app:layout_rowSpan="3"
        app:layout_rowWeight="1"
        />
    <TextView
        android:id="@+id/note_date"
        android:layout_width="wrap_content"
        android:layout_weight="1"
        android:textSize="13sp"
        android:gravity="center_vertical"
        android:layout_marginLeft="2dp"
        android:layout_marginRight="50dp"
        android:layout_height="30dp"
        />

    <ImageButton
        android:id="@+id/indicator"
        android:src="@drawable/ic_directions_run"
        android:layout_width="15dp"
        android:background="#FFFFFF"
        android:layout_marginEnd="50dp"
        android:layout_marginTop="5dp"
        android:layout_height="15dp"
        android:visibility="visible"
        android:layout_gravity="top|end"
        />
    <android.support.v7.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:id="@+id/jb"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp">

        <LinearLayout
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_width="match_parent">

            <TextView
                android:id="@+id/note_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_marginStart="8dp"
                android:layout_marginLeft="8dp"
                style="@style/TextAppearance.AppCompat.Headline"
                tools:text="@string/note_title"
                app:layout_column="1"
                android:minHeight="20dp"
                app:layout_row="0"
                app:layout_columnWeight="1"
                android:textSize="20sp"
                />

            <TextView
                android:id="@+id/notes_desc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginLeft="8dp"
                android:maxHeight="170dp"
                android:textColor="#bb000000"
                app:layout_column="1"
                app:layout_row="0"
                app:layout_columnWeight="1"
                android:textSize="15sp" />


            <RelativeLayout
                android:layout_width="match_parent"
                android:id="@+id/id1"
                android:background="#18000000"
                android:layout_height="wrap_content">

            <ImageButton
                android:id="@+id/fav123"
                android:src="@drawable/ic_favorite_border77"
                android:layout_width="45dp"
                android:background="#00000008"
                android:layout_marginEnd="5dp"
                android:layout_marginBottom="5dp"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="5dp"
                android:elevation="5dp"
                android:layout_height="45dp"
                android:visibility="invisible"
                android:backgroundTint="@color/white"
                android:layout_gravity="bottom|end"
                />
            <ImageButton
                android:id="@+id/fav"
                android:src="@drawable/ic_favorite_border777"
                android:layout_width="45dp"
                android:elevation="5dp"
                android:background="#00000008"
                android:layout_marginEnd="5dp"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="5dp"
                android:backgroundTint="@color/white"
                android:layout_marginBottom="5dp"
                android:layout_height="45dp"
                android:visibility="visible"
                android:layout_gravity="center"
                />
            </RelativeLayout>

        </LinearLayout>
    </android.support.v7.widget.LinearLayoutCompat>

</android.support.v7.widget.CardView>